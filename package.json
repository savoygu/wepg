{
  "name": "wepg",
  "version": "0.0.0",
  "description": "web 常用插件",
  "main": "index.js",
  "scripts": {
    "lint": "eslint packages/**/*.js",
    "test": "echo 'test'",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "build:jQuery": "gulp build:$",
    "build:native": "gulp build:native",
    "bootstrap": "(yarn || npm install) && bower install",
    "dev:$": "npm run bootstrap && type=$ name=${name} npm run bs",
    "dev:native": "npm run bootstrap && type=native name=${name} npm run bs",
    "clean": "rimraf packages/**/dist",
    "bs": "browser-sync start --server packages/${name}/${type} --files '**/*.*'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "packages/**/*.{html,js}": [
        "npm run lint",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "packages/**/dist/**/*.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": "git@github.com:wepg/wepg.git",
  "author": "(savoygu <savoygu@126.com>)",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "browser-sync": "^2.24.6",
    "conventional-changelog-cli": "^2.0.1",
    "eslint": "^5.2.0",
    "eslint-plugin-html": "^4.0.5",
    "gulp": "^3.9.1",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.4.3",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {}
}
