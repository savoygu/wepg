{
  "name": "wepg",
  "description": "web 常用插件",
  "scripts": {
    "lint": "eslint packages/**/*.js",
    "test": "echo 'test'",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "build:jQuery": "gulp build:$",
    "build:native": "gulp build:native",
    "bootstrap": "(yarn || npm install) && bower install",
    "dev:$": "npm run bootstrap && type=$ name=${name} npm-run-all -p watch:sass bs",
    "dev:native": "npm run bootstrap && gulp serve --name ${name}",
    "clean": "rimraf packages/**/dist",
    "watch:sass": "node-sass -w --output-style=expanded --include-path=node_modules ./packages/${name}/${type}/src/index.scss ./packages/${name}/${type}/dist/${name}.css",
    "bs": "browser-sync start --server packages/${name}/${type} --files '**/*.html,**/*.js,**/*.css'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "new": "node ./build/bin/new.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "packages/**/*.{html,js}": [
        "npm run lint",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "packages/**/dist/**/*.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": "git@github.com:wepg/wepg.git",
  "author": "(savoygu <savoygu@126.com>)",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.24.6",
    "conventional-changelog-cli": "^2.0.1",
    "eslint": "^5.2.0",
    "eslint-plugin-html": "^4.0.5",
    "file-save": "^0.2.0",
    "gulp": "^3.9.1",
    "gulp-better-rollup": "^3.3.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.1",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.4.3",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "pump": "^3.0.0",
    "rimraf": "^2.6.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-uglify": "^6.0.0",
    "sass-bem": "^2.6.5"
  },
  "dependencies": {}
}
